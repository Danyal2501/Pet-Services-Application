<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
      Learnt how to create custom ratings bar from https://hackernoon.com/how-to-customize-ratingbar-component-in-android-gf1h3u0d
      -->

    <!--
      This block of code sets up the background for the rating bar.
      -->
    
    <item android:id="@android:id/background"
        android:drawable="@drawable/star1"
          />

    <!--
      This block of code shows the current value of the rating.
      -->
    
    <item android:id="@android:id/progress"
        android:drawable="@drawable/star2"
        />

</layer-list>
